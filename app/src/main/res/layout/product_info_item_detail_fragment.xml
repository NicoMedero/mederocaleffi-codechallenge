<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/product_info_item_height"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/vNameBackgroundDarkProductInfoItem"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:background="@color/medium_gray"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vValueNameBackgroundDarkProductInfoItem"/>

    <FrameLayout
        android:id="@+id/vNameBackgroundLightProductInfoItem"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vValueNameBackgroundDarkProductInfoItem"/>

    <FrameLayout
        android:id="@+id/vValueNameBackgroundDarkProductInfoItem"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/vNameBackgroundDarkProductInfoItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout
        android:id="@+id/vValueNameBackgroundLightProductInfoItem"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/vNameBackgroundDarkProductInfoItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/vNameProductInfoItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_large_small"
        android:layout_marginEnd="@dimen/space_large_small"
        android:textColor="@color/black"
        android:maxLines="3"
        app:layout_constraintStart_toStartOf="@id/vNameBackgroundDarkProductInfoItem"
        app:layout_constraintTop_toTopOf="@id/vNameBackgroundDarkProductInfoItem"
        app:layout_constraintEnd_toEndOf="@id/vNameBackgroundDarkProductInfoItem"
        app:layout_constraintBottom_toBottomOf="@id/vNameBackgroundDarkProductInfoItem"
        tools:text="Marca"/>

    <TextView
        android:id="@+id/vValueNameProductInfoItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_large_small"
        android:layout_marginEnd="@dimen/space_large_small"
        android:textColor="@color/black"
        android:maxLines="3"
        app:layout_constraintStart_toStartOf="@id/vValueNameBackgroundDarkProductInfoItem"
        app:layout_constraintTop_toTopOf="@id/vValueNameBackgroundDarkProductInfoItem"
        app:layout_constraintEnd_toEndOf="@id/vValueNameBackgroundDarkProductInfoItem"
        app:layout_constraintBottom_toBottomOf="@id/vValueNameBackgroundDarkProductInfoItem"
        tools:text="Samsung o Iphone"/>

</androidx.constraintlayout.widget.ConstraintLayout>